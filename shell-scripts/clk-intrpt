#!/usr/bin/env bash

switchToWindow=4

function beep() {
  beeps=${1:-5}
  for (( i=0; i<$beeps; i++ )); do
    tput bel
    sleep 0.225
  done
}

function lock_screen() {
  sleep 20
  gnome-screensaver-command -l
}

clear
echo "###############################"
echo "#### Starting intrpt timer ####"
echo "###############################"

while true; do

  sleep 0.5
  time_val=$(date)
  echo -ne "\\r$time_val"

  time_min=$(echo $time_val | cut -d' ' -f 5)
  time_min=${time_min:3:5}
  if [[ $(egrep '(00:00|30:00)$' <(echo $time_min)) ]]; then
    echo ""
    echo "-------------------------------"
    beep 12 &
    sleep 1
  fi
  if [[ $(egrep '(25:00|55:00)$' <(echo $time_min)) ]]; then
    echo ""
    echo "-------------------------------"
    wmctrl -s 2
    gedit /home/ncoder/.local/share/notes@maestroschan.fr/0_text &
    beep 20 &
    lock_screen &
    sleep 1
  fi
done

